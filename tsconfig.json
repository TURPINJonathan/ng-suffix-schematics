{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "jasmine"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./*/files/**/*", "./node_modules/**/*", "./**/*.spec.ts"]
}
